  "private": true,
  "type": "module",
  "scripts": {
    "dev": "tsx index.ts",
    "build": "npx esbuild index.ts --platform=node --packages=external --bundle --format=esm --outdir=dist",
    "start": "NODE_ENV=production node dist/index.js",
    "check": "tsc --noEmit",
    "db:generate": "drizzle-kit generate --config=./drizzle.config.ts",
